@model IEnumerable<MGM.Models.InventoryProduct>

@{
    ViewData["Title"] = "InventoryProductIndex";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>List of Product Inventory</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Qty)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Supplier)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Qty)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Supplier.CompanyName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.InventoryProductId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.InventoryProductId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.InventoryProductId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
