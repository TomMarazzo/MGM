@model MGM.Models.CostQty

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit CostQty</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
